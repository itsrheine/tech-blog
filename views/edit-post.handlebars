<section class="min-vh-100 bg-white">
    <div class="container">
        <div class="row text-dark">
            <div class="col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto text-center form p-4">
                <h1 class="display-4 py-2">Edit Post</h1>
                <div class="px-2">
                    <form action="" id="edit-post-form" class="edit-post-form justify-content-center">
                        <div class="form-group">
                            <label class="sr-only">Title</label>
                            <input type="text" name="post-title" id="post-title" class="form-control" value="{{post.title}}">
                        </div>
                        <div class="input-group">
                            <label class="sr-only">Content</label>
                            <textarea type="post-content" id="post-content" class="form-input" placeholder="Content">{{post.content}}</textarea>
                        </div><br>
                        <button type="submit" class="btn btn-primary btn-lg">Update</button>
                        <button type="submit" class="btn btn-primary btn-lg">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="javascript/edit-post.js"></script>